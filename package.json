{
  "name": "rfxcom2mqtt-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for RFXCOM to MQTT bridge and frontend",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm run -r build",
    "dev": "pnpm run --parallel -r dev",
    "start": "pnpm run --parallel -r start",
    "test": "pnpm run --filter \"./packages/*\" --filter \"./apps/*\" test",
    "test:e2e": "pnpm run --filter \"./apps/*\" test:e2e",
    "lint": "pnpm run -r lint",
    "format": "prettier -w \"./{apps,packages}/*/{src,test}/**/*.{ts,tsx,js}\"",
    "pretty": "pnpm run -r pretty",
    "pretty:check": "pnpm run -r pretty:check"
  },
  "engines": {
    "node": ">=24",
    "pnpm": ">=8"
  },
  "author": "Sguernion<sguernion@github.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rfxcom2mqtt/application.git"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "pnpm": {
    "overrides": {
      "shelljs": ">=0.8.5",
      "nth-check": ">=2.0.1",
      "yargs-parser": ">=5.0.1",
      "postcss": ">=8.4.31",
      "esbuild": ">=0.25.0",
      "webpack-dev-server": ">=5.2.1"
    }
  }
}
