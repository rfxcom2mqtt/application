{
    "name": "@rfxcom2mqtt/backend",
    "repository": "https://github.com/rfxcom2mqtt/rfxcom2mqtt",
    "author": "Sguernion<sguernion@github.com>",
    "license": "Apache-2.0",
    "version": "1.0.0",
    "description": "RFXCOM to MQTT bridge",
    "main": "src/index.ts",
    "engines": {
        "node": "^24"
    },
    "dependencies": {
        "@rfxcom2mqtt/frontend": "workspace:*",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.18.2",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/passport": "^1.0.17",
        "@types/passport-oauth2": "^1.4.17",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-session": "^1.18.1",
        "express-static-gzip": "^2.1.7",
        "fast-deep-equal": "^3.1.3",
        "git-last-commit": "^1.0.1",
        "http-status-codes": "^2.3.0",
        "js-yaml": "^4.1.0",
        "jsonwebtoken": "^9.0.2",
        "mqtt": "^5.5.3",
        "node-config-yaml": "^0.1.4",
        "node-cron": "^3.0.2",
        "object-assign-deep": "^0.4.0",
        "passport": "^0.7.0",
        "passport-oauth2": "^1.8.0",
        "rfxcom": "^2.6.0",
        "rimraf": "^5.0.5",
        "semver": "^7.5.4",
        "serve-static": "^2.2.0",
        "shelljs": "^0.8.5",
        "socket.io": "^4.7.5",
        "source-map-support": "^0.5.21",
        "uuid": "^9.0.1",
        "winston": "^3.13.0",
        "winston-transport": "^4.7.0",
        "y18n": "^4.0.1"
    },
    "scripts": {
        "build": "pnpm exec tsc && node index.js writehash",
        "build-start": "node index.js --env-file=.env.dev",
        "start": "ts-node ./src/index.ts",
        "dev": "ts-node ./src/index.ts --env-file=.env.dev",
        "pretty": "prettier --write \"./**/*.{js,jsx,ts,tsx}\"",
        "lint": "eslint \"./**/*.{js,jsx,ts,tsx}\" --ignore-pattern 'dist/*' --ignore-pattern 'index.js'",
        "pretty:check": "prettier --check \"./**/*.{js,jsx,ts,tsx}\"",
        "test": "NODE_ENV=test vitest run",
        "test:watch": "NODE_ENV=test vitest",
        "test:cov": "NODE_ENV=test vitest run --coverage",
        "test:debug": "NODE_ENV=test vitest --inspect-brk --inspect --logHeapUsage --threads=false",
        "test:e2e": "NODE_ENV=test vitest run **/*.e2e.test.ts"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express-serve-static-core": "^5.0.6",
        "@types/jest": "^29.5.14",
        "@types/node": "^20.12.7",
        "@types/node-cron": "^3.0.11",
        "@types/object-assign-deep": "^0.4.3",
        "@types/serve-static": "^1.15.8",
        "@typescript-eslint/eslint-plugin": "^8.34.0",
        "@typescript-eslint/parser": "^8.34.0",
        "@vitest/coverage-v8": "^3.2.4",
        "eslint": "^9.0.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-n": "^17.2.1",
        "eslint-plugin-prettier": "^5.1.3",
        "jest": "^30.0.0",
        "mqtt-packet": "^9.0.2",
        "nth-check": "^2.1.1",
        "prettier": "^3.2.5",
        "ts-jest": "^29.3.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5",
        "vitest": "^3.2.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.test\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
