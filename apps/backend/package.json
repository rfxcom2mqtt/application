{
    "name": "@rfxcom2mqtt/backend",
    "repository": "https://github.com/rfxcom2mqtt/rfxcom2mqtt",
    "author": "Sguernion<sguernion@github.com>",
    "license": "Apache-2.0",
    "version": "1.0.0",
    "description": "RFXCOM to MQTT bridge",
    "main": "src/index.ts",
    "engines": {
        "node": ">=22",
        "pnpm": ">=9"
    },
    "dependencies": {
        "@rfxcom2mqtt/frontend": "workspace:*",
        "@rfxcom2mqtt/shared": "workspace:*",
        "@types/express": "^5.0.3",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^5.1.0",
        "express-static-gzip": "^3.0.0",
        "fast-deep-equal": "^3.1.3",
        "git-last-commit": "^1.0.1",
        "http-status-codes": "^2.3.0",
        "js-yaml": "^4.1.0",
        "mqtt": "^5.11.4",
        "node-config-yaml": "^0.1.4",
        "node-cron": "^4.1.1",
        "object-assign-deep": "^0.4.0",
        "prom-client": "^15.1.3",
        "rfxcom": "^2.6.0",
        "rimraf": "^6.0.1",
        "semver": "^7.6.3",
        "serve-static": "^2.2.0",
        "shelljs": "^0.10.0",
        "socket.io": "^4.8.1",
        "source-map-support": "^0.5.21",
        "uuid": "^11.1.0",
        "winston": "^3.17.0",
        "winston-transport": "^4.9.0",
        "y18n": "^5.0.8"
    },
    "scripts": {
        "build": "pnpm exec tsc && node index.js writehash",
        "build-start": "node index.js --env-file=.env.dev",
        "start": "ts-node ./src/index.ts",
        "start:dev": "ts-node ./src/index.ts --env-file=.env.dev",
        "pretty": "prettier --write \"./**/*.{js,jsx,ts,tsx}\"",
        "lint": "eslint \"./**/*.{js,jsx,ts,tsx}\" --ignore-pattern 'dist/*' --ignore-pattern 'index.js'",
        "pretty:check": "prettier --check \"./**/*.{js,jsx,ts,tsx}\"",
        "test": "NODE_ENV=test vitest run",
        "test:watch": "NODE_ENV=test vitest",
        "test:cov": "NODE_ENV=test vitest run --coverage",
        "test:debug": "NODE_ENV=test vitest --inspect-brk --inspect --logHeapUsage --threads=false",
        "test:e2e": "NODE_ENV=test vitest run **/*.e2e.test.ts"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.9",
        "@types/cors": "^2.8.19",
        "@types/express-serve-static-core": "^5.0.6",
        "@types/js-yaml": "^4.0.9",
        "@types/node-cron": "^3.0.11",
        "@types/object-assign-deep": "^0.4.3",
        "@types/serve-static": "^1.15.8",
        "@vitest/coverage-v8": "^3.2.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-n": "^17.20.0",
        "eslint-plugin-prettier": "^5.5.0",
        "mqtt-packet": "^9.0.2",
        "nth-check": "^2.1.1",
        "ts-node": "^10.9.2"
    }
}
