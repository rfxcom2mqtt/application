{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "preserveSymlinks": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "allowJs": true,
    "rootDir": "src",
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "isolatedModules": true,
    "types": ["vitest/globals", "node"],
    "paths": {
      "@shared/*": ["../../packages/shared/src/*"],
      "@backend/*": ["./src/*"],
      "@frontend/*": ["../frontend/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vitest.config.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/test/**/*",
    "**/tests/**/*"
  ]
}
