{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "preserveSymlinks": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "allowJs": true,
    "rootDir": "src",
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "isolatedModules": true,
    "types": ["vitest/globals", "node"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vitest.config.ts"
  ]
}
