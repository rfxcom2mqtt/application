{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "preserveSymlinks": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "allowJs": true,
    "rootDir": "src",
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
